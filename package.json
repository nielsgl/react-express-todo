{
	"name": "react-todo",
	"description": "React Todo App",
	"version": "0.1.0",
	"main": "index.js",
	"license": "MIT",
	"author": {
		"name": "Niels van Galen Last",
		"email": "nvangalenlast@gmail.com",
		"url": "https://nielsgl.com"
	},
	"homepage": "https://github.com/nielsgl/react-express-todo#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nielsgl/react-express-todo.git"
	},
	"bugs": {
		"url": "https://github.com/nielsgl/react-express-todo/issues"
	},
	"private": true,
	"scripts": {
		"build": "react-scripts build",
		"eject": "react-scripts eject",
		"start": "react-scripts start",
		"test": "react-scripts test",
		"lint": "eslint .",
		"start:api": "DEBUG=api:* nodemon ./api/bin/www",
		"start:db": "json-server http://jsonplaceholder.typicode.com/db --port 4000",
		"test:api": "yarn test:api:unit && yarn test:api:integration",
		"test:api:unit": "cross-env NODE_ENV=test mocha api/test/unit/*.test.js",
		"test:api:integration": "cross-env NODE_ENV=test mocha api/test/integration/*.test.js",
		"analyze": "source-map-explorer build/static/js/main.*",
		"build:analyze": "yarn build && yarn analyze"
	},
	"dependencies": {
		"prop-types": "^15.7.2",
		"ra-data-json-server": "^2.7.3",
		"react": "^16.8.4",
		"react-admin": "^2.7.3",
		"react-dom": "^16.8.4",
		"react-scripts": "2.1.8",
		"sequelize": "^4.43.0"
	},
	"babel": {
		"presets": [
			"env"
		]
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"extends": "react-app",
		"plugins": [
			"prettier"
		],
		"rules": {
			"prettier/prettier": "error",
			"no-var": "error"
		},
		"settings": {
			"import/resolver": {
				"node": {
					"moduleDirectory": [
						"node_modules",
						"src"
					]
				}
			}
		},
		"env": {
			"es6": true,
			"mocha": true
		}
	},
	"eslintIgnore": [
		"node_modules",
		"build"
	],
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"directories": {
		"doc": "docs"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.3.4",
		"babel-preset-airbnb": "^3.2.0",
		"cookie-parser": "^1.4.4",
		"cross-env": "^5.2.0",
		"eslint-config-react-app": "^3.0.8",
		"eslint-plugin-import": "^2.16.0",
		"eslint-plugin-prettier": "^3.0.1",
		"expect.js": "^0.3.1",
		"json-server": "^0.14.2",
		"mocha": "^6.0.2",
		"nodemon": "^1.18.10",
		"prettier": "^1.16.4",
		"source-map-explorer": "^1.7.0",
		"sqlite3": "^4.0.6",
		"supertest": "^4.0.0"
	}
}
